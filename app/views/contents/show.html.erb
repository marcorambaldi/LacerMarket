<div class="row">
	<div class="col l6 show-img">
		<%= image_tag @content.cover.url, class: "responsive-img" %>
	</div>
	<div class="col l6">
		<h1 class="show-titolo"><%= @content.titolo %></h1>
		<h4 class="show-prezzo"><%= number_to_currency(@content.price) %></h4>
		<p>Venduto da <%= @content.user.name %></p>
		<p><%= @content.descrizione %></p>

		<% if current_user %>
			<%= form_tag compra_path(slug: @content.slug) do %>
				<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
				      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
				      data-description="<%= @content.titolo %>"
				      data-email="<%= current_user.email %>"
				      data-currency="eur"
				      data-amount="<%= (@content.price * 100).floor %>"
				      data-name="LacerMarket"
				      data-locale="auto">
				</script>
			<% end %>
		<% else %>
			<p>Fai <%= link_to "Log In", new_user_session_path %> oppure <%= link_to "Registrati", new_user_registration_path %> per acuistare questo contenuto.</p>
		<% end %>
	</div>
</div>



<% if @content.user == current_user %>
	<%= link_to 'Edit', edit_content_path(@content) %> |
<% end %>
<%= link_to 'Torna ai contenuti', contents_path %>
